<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <!-- Paste the HTML here -->
      <div class="post-user-name">
        <!-- Fill in the src attribute to display @user's profile image -->
        <img src="<%= "/user_images/#{@user.image_name}" %>">

        <!-- Add a link to the "User details" page using the link_to method -->
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
    <p>
    <%= @post.content %>
    </p>
    <div class="post-time">
    <%= @post.created_at %>
    </div>

    <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
      <%= button_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
      <span class="fa fa-heart like-btn-unlike"></span>
      <% end %>
      <% else %>
      <%= button_to("/likes/#{@post.id}/create", {method: "post"}) do %>
      <span class="fa fa-heart like-btn"></span>
      <% end %>
    <% end %>
    <%= @likes_count %>

    <% if @post.user_id == @current_user.id %>
    <div class="post-menus">
    <%= link_to("Edit", "/post/#{@post.id}/edit") %>
    <%= button_to("Delete", "/post/#{@post.id}/destroy", {method: "post"})%>
    </div>
    <% end %>
    </div>
  </div>
</div>